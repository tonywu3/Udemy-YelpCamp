<%include ../partials/header%>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit <%=campground.name%> </h1>
        <div style="width:30%; margin:30px auto">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value="<%= campground.name%>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="camp[price]" value="<%= campground.price%>" min="0.01" step=".01"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[description]" value="<%= campground.description%>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[image]" value="<%= campground.image%>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
        
    </div>
</div>

<%include ../partials/footer%>